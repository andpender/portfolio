extends layout

block content
    script(src='/javascripts/wikipedia.js')    
    link(rel='stylesheet', href='/stylesheets/wikipedia.css')

    #overall.container
        .row.justify-content-center
            h1 Wikipedia Viewer
        .row.justify-content-center
            input#theForm.col-6(type='text')
        .row.justify-content-center
            button#getWiki.col-3.btn.btn-primary Submit
            button#clearContents.col-3.btn.btn-secondary Clear
        .row.justify-content-center
            a.randomArticle(target='_blank', href='https://en.wikipedia.org/wiki/Special:Random') Click here for a random article
        #allResults.row.justify-content-center